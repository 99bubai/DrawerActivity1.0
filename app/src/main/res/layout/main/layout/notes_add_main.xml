<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/button_view"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <!--backgroud设置为透明-->
        <ImageButton
            android:id="@+id/button_add_select"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add_select"
            />
        <ImageButton
            android:id="@+id/button_add_favorite"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add_favorite"
            />
        <ImageButton
            android:id="@+id/button_add_explain"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add_explain"
            />
        <ImageButton
            android:id="@+id/button_add_picture"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add_picture"
            />
        <ImageButton
            android:id="@+id/button_add_attachment"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add_attachment"
            />
        <ImageButton
            android:id="@+id/button_add_notification"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add_notification"
            />
        <ImageButton
            android:id="@+id/button_add_back"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add_back"
            />
    </LinearLayout>

    <EditText
        android:layout_below="@+id/button_view"
        android:id="@+id/add_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:text="请输入标题"/>
    <!--实在搞不成紧密排列，打算用java动态查入button-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lily"
    android:layout_below="@+id/add_title">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2" />
    <Spinner
        android:layout_weight="5"
        android:id="@+id/spinner_add_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/languages" />
</LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:text="输入正文"
        android:layout_below="@+id/lily"/>
    <!--
    新键日记界面
    提供图片，标签，附件添加功能
    需要支持拍照，录音，手写添加功能
    预计设置三个按钮，三种日记格式
    按钮1：添加图片，再其中提供照相支持
    按钮2：附件添加
    按钮3：日记格式选择（一般日记，语音日记，手写日记）
    -->
</RelativeLayout>