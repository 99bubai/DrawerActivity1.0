<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--button组-->
    <LinearLayout
        android:id="@+id/button_view_local"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <!--backgroud设置为透明-->
        <ImageButton
            android:id="@+id/button_local_edit"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add_select"
            />
        <ImageButton
            android:id="@+id/button_local_favorite"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/button_local_explain"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add_explain"
            />
        <ImageButton
            android:id="@+id/button_local_notification"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add_notification"
            />
        <ImageButton
            android:id="@+id/button_local_back"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add_back"
            />
    </LinearLayout>
    <!--自定义布局-->
    <edu.scse.draweractivity.ui.FlagLayout
        android:id="@+id/flagLayout_local"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button_view_local"/>
    <TextView
        android:id="@+id/textView_local_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:layout_below="@+id/flagLayout_local"
        android:hint="标题"/>
    <TextView
        android:id="@+id/textView_local_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView_local_title"
        android:gravity="top"
        android:hint="正文" />
</RelativeLayout>